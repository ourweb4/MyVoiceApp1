<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyVoiceApp.Pages.LoginPage">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <OnPlatform.Platforms>
                <On Platform="iOS" Value="0, 20, 0, 0" />
                <On Platform="Android" Value="0, 0, 0, 0" />
                <On Platform="UWP" Value="0, 0, 0, 0" />
            </OnPlatform.Platforms>
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtemail" Keyboard="Email" Placeholder="Email" />
            <Entry x:Name="txtpassword"  Placeholder="Password" />
            <Button x:Name="btnlogin" Text="Login" Clicked="btnlogin_Clicked"></Button>
            <Button x:Name="btnreg" Text="Registar" Clicked="btnreg_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>